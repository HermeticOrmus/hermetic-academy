# Hermetic Academy - Environment Variables Template
# Copy this file to .env.local and fill in your values

# ============================================================================
# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
# ============================================================================

NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================================================
# Optional: Local Development Database
# Used by docker-compose for local PostgreSQL
# ============================================================================

DATABASE_URL=postgresql://postgres:hermetic_dev_password@localhost:5432/hermetic_academy

# ============================================================================
# Optional: Vercel Deployment (for CI/CD)
# Get from: https://vercel.com/account/tokens
# ============================================================================

# VERCEL_TOKEN=your-vercel-token-here

# ============================================================================
# Optional: Sentry Error Tracking (Phase 3)
# Get from: https://sentry.io/settings/YOUR_ORG/projects/YOUR_PROJECT/keys/
# ============================================================================

# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here
# SENTRY_AUTH_TOKEN=your-sentry-auth-token

# ============================================================================
# Optional: Stripe Payments (Phase 4)
# Get from: https://dashboard.stripe.com/apikeys
# ============================================================================

# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-key-here
# STRIPE_SECRET_KEY=sk_test_your-key-here
# STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================================================
# Optional: Email Service (Phase 3)
# Get from: https://resend.com/api-keys
# ============================================================================

# RESEND_API_KEY=re_your-key-here
